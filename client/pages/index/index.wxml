<view class="wx-view-content_full" >
    <swiper class="wx-swiper"  indicator-dots="True" lower-threshold="50">
        <swiper-item class="c-full wx-swiper-item1" />
        <swiper-item class="c-full wx-swiper-item1" />
        <swiper-item class="c-full wx-swiper-item1" />
    </swiper>
</view>
<view class="wx-view-content" >
    <view class="wx-view_middle2" >
        <view class="wx-view_half" bindtap="specialistScheme">
            <image class="wx-image_half"  mode="scaleToFill" src="http://ac-eh9unt0e.clouddn.com/6500d13529c2db6bd22d.png" style="background-size:  100% 100%; background-position:  0% 0%; background-repeat:  no-repeat; background-image: url(http://ac-eh9unt0e.clouddn.com/6500d13529c2db6bd22d.png); "/>
            <text class="wx-text_sm_bold" >突破性疗法</text>
        </view>
        <view class="wx-view_half" >
            <image class="wx-image_half"  mode="scaleToFill" src="http://ac-eh9unt0e.clouddn.com/04c52d2f46e01f6f945d.png" style="background-size:   100% 100%; background-position:   0% 0%; background-repeat:   no-repeat; background-image: url(http://ac-eh9unt0e.clouddn.com/04c52d2f46e01f6f945d.png); "/>
            <text class="wx-text_sm_bold" >免费咨询</text>
        </view>
    </view>

<view class="wx-view_middle2" hidden="true">
        <view class="wx-view_half" >
             <text class="label">手机号</text>
      <input value="{{userPhone}}" bindinput="updateUserPhone" id="userPhone" class="account-info-input"/>
        </view>
       
          <button  class="wx-view_half" bindtap="loginbyphone">
           <image class="wx-image_half"  mode="scaleToFill" src="http://ac-eh9unt0e.clouddn.com/6500d13529c2db6bd22d.png" style="background-size:  100% 100%; background-position:  0% 0%; background-repeat:  no-repeat; background-image: url(http://ac-eh9unt0e.clouddn.com/6500d13529c2db6bd22d.png); "/>
            <text class="wx-text_sm_bold" >登陆</text>
          </button>
    </view>

    <view class="wx-view_middle3" >
        <view class="wx-view_indexItem" >
            <view class="wx-view_middle2-item" >
                <image class="wx-image_small"  mode="scaleToFill" src="http://ac-eh9unt0e.clouddn.com/a2b0dbaf4183ed854f26.png" style="background-size:  100% 100%; background-position:  0% 0%; background-repeat:  no-repeat; background-image: url(http://ac-eh9unt0e.clouddn.com/a2b0dbaf4183ed854f26.png); "/>
            </view>
            <view class="wx-view_middle2-itemText" >
                <text class="wx-text_sm" >抗癌指南</text>
            </view>
        </view>
        <view class="wx-view_indexItem" >
            <view class="wx-view_middle2-item" >
                <image class="wx-image_small"  mode="scaleToFill" src="http://ac-eh9unt0e.clouddn.com/6500d13529c2db6bd22d.png" style="background-size:  100% 100%; background-position:  0% 0%; background-repeat:  no-repeat; background-image: url(http://ac-eh9unt0e.clouddn.com/6500d13529c2db6bd22d.png); "/>
            </view>
            <view class="wx-view_middle2-itemText" >
                <text class="wx-text_sm" >专属方案</text>
            </view>
        </view>
        <view class="wx-view_indexItem" >
            <view class="wx-view_middle2-item" >
                <image class="wx-image_small"  mode="scaleToFill" src="http://ac-eh9unt0e.clouddn.com/653c2d4fe81e0a4e07f1.png" style="background-size:  100% 100%; background-position:  0% 0%; background-repeat:  no-repeat; background-image: url(http://ac-eh9unt0e.clouddn.com/653c2d4fe81e0a4e07f1.png); "/>
            </view>
            <view class="wx-view_middle2-itemText" >
                <text class="wx-text_sm" >平台服务</text>
            </view>
        </view>
        <view class="wx-view_indexItem" >
            <view class="wx-view_middle2-item" >
                <image class="wx-image_small"  mode="scaleToFill" src="http://ac-eh9unt0e.clouddn.com/cb974cdaaa9c120884a1.png" style="background-size:  100% 100%; background-position:  0% 0%; background-repeat:  no-repeat; background-image: url(http://ac-eh9unt0e.clouddn.com/cb974cdaaa9c120884a1.png); "/>
            </view>
            <view class="wx-view_middle2-itemText" >
                <text class="wx-text_sm" >治疗资讯</text>
            </view>
        </view>
    </view>
</view>
<view class="wx-view-content" >
    <view class="wx-panel" >
        <view class="wx-media-box" wx:for="{{todos}}" >
            <view class="weui-media-box_hd" />
            <view class="weui-media-box_bd" >
                <text class="c-block weui-media-box_title" >{{item.title}}</text>
                <text class="weui-media-box_desc" >{{item.desc}}</text>
            </view>
        </view>
    </view>
</view>